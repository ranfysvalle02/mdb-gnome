{
  "slug": "storyweaver",
  "name": "Story Weaver",
  "description": "A collaborative writing and research platform for collecting, organizing, and synthesizing stories and study notes with AI-powered features",
  "status": "active",
  "auth_required": true,
  "sub_auth": {
    "enabled": true,
    "strategy": "hybrid",
    "collection_name": "users",
    "session_cookie_name": "storyweaver_session",
    "session_ttl_seconds": 86400,
    "allow_registration": true,
    "link_platform_users": true,
    "user_id_field": "experiment_user_id",
    "auto_link_platform_demo": true,
    "demo_user_seed_strategy": "auto",
    "allow_demo_access": true
  },
  "data_scope": ["self"],
  "managed_indexes": {
    "projects": [
      {
        "name": "projects_user_id_created_at_index",
        "type": "regular",
        "keys": [
          ["user_id", 1],
          ["created_at", -1]
        ]
      }
    ],
    "notes": [
      {
        "name": "notes_text_search_index",
        "type": "search",
        "definition": {
          "mappings": {
            "dynamic": false,
            "fields": {
              "content": {
                "type": "string",
                "analyzer": "lucene.standard"
              },
              "project_id": {
                "type": "objectId"
              },
              "user_id": {
                "type": "objectId"
              },
              "tags": {
                "type": "string",
                "analyzer": "lucene.keyword"
              },
              "timestamp": {
                "type": "date"
              },
              "contributor_label": {
                "type": "string",
                "analyzer": "lucene.keyword"
              }
            }
          }
        }
      },
      {
        "name": "notes_vector_embedding_index",
        "type": "vectorSearch",
        "definition": {
          "fields": [
            {
              "type": "vector",
              "path": "content_embedding",
              "numDimensions": 1536,
              "similarity": "cosine"
            },
            {
              "type": "filter",
              "path": "project_id"
            },
            {
              "type": "filter",
              "path": "user_id"
            }
          ]
        }
      },
      {
        "name": "notes_project_user_timestamp_index",
        "type": "regular",
        "keys": [
          ["project_id", 1],
          ["user_id", 1],
          ["timestamp", -1]
        ]
      },
      {
        "name": "notes_tags_index",
        "type": "regular",
        "keys": { "tags": 1 }
      }
    ],
    "invited_users": [
      {
        "name": "invited_users_token_index",
        "type": "regular",
        "keys": { "token": 1 },
        "options": { "unique": true }
      },
      {
        "name": "invited_users_project_id_created_at_index",
        "type": "regular",
        "keys": [
          ["project_id", 1],
          ["created_at", -1]
        ]
      }
    ],
    "shared_invites": [
      {
        "name": "shared_invites_token_index",
        "type": "regular",
        "keys": { "token": 1 },
        "options": { "unique": true }
      },
      {
        "name": "shared_invites_project_id_created_at_index",
        "type": "regular",
        "keys": [
          ["project_id", 1],
          ["created_at", -1]
        ]
      }
    ],
    "quizzes": [
      {
        "name": "quizzes_share_token_index",
        "type": "regular",
        "keys": { "share_token": 1 },
        "options": { "unique": true, "sparse": true }
      },
      {
        "name": "quizzes_project_created_at_index",
        "type": "regular",
        "keys": [
          ["project_id", 1],
          ["created_at", -1]
        ]
      }
    ]
  }
}

